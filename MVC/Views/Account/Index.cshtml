@{
    ViewBag.Title = "Compensation | Sign in";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <!-- Tell the browser to be responsive to screen width -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <!-- Favicon icon -->
    <link rel="icon" type="image/png" sizes="16x16" href="~/lib/assets/images/favicon.ico">
    <title>@ViewBag.Title</title>
    <!-- Bootstrap Core CSS -->
    <link href="~/lib/assets/plugins/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/lib/css/style.css" rel="stylesheet" />
    <!-- You can change the theme colors from here -->
    <link href="~/lib/css/colors/purple-dark.css" rel="stylesheet" />
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
        <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
</head>

<body>
    <!-- ============================================================== -->
    <!-- Preloader - style you can find in spinners.css -->
    <!-- ============================================================== -->
    <div class="preloader">
        <svg class="circular" viewBox="25 25 50 50">
            <circle class="path" cx="50" cy="50" r="20" fill="none" stroke-width="2" stroke-miterlimit="10" />
        </svg>
    </div>
    <!-- ============================================================== -->
    <!-- Main wrapper - style you can find in pages.scss -->
    <!-- ============================================================== -->
    <section id="wrapper" class="login-register login-sidebar" style="background-image:url(/lib/assets/images/background/login.jpg);">
        <div class="login-box card">
            <div class="card-body">
                <form class="form-horizontal form-material" id="loginform" action="index.html">
                    <a href="javascript:void(0)" class="text-center db"><img src="/lib/assets/images/logo-icon.png" alt="Home" width="70" /><br /><img src="/lib/assets/images/logo-text.png" alt="Home" width="210" /></a>

                    <div class="form-group m-t-40">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Email" id="Email" name="Email">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-xs-12">
                            <input class="form-control" type="password" required="" placeholder="Password" id="Password" name="Password">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-12">
                            <div class="checkbox checkbox-primary pull-left p-t-0">
                                <input id="checkbox-signup" type="checkbox">
                                <label for="checkbox-signup"> Remember me </label>
                            </div>
                            <a href="javascript:void(0)" id="to-recover" class="text-dark pull-right"><i class="fa fa-lock m-r-5"></i> Forgot password?</a>
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-info btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Log In</button>
                        </div>
                    </div>
                </form>
                <form class="form-horizontal" id="recoverform" action="/Account/Index">
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <h3>Recover Password</h3>
                            <p class="text-muted">Enter your Email and instructions will be sent to you! </p>
                        </div>
                    </div>
                    <div class="form-group ">
                        <div class="col-xs-12">
                            <input class="form-control" type="text" required="" placeholder="Email" id="EmailForgotPassword">
                        </div>
                    </div>
                    <div class="form-group text-center m-t-20">
                        <div class="col-xs-12">
                            <button class="btn btn-primary btn-lg btn-block text-uppercase waves-effect waves-light" type="submit">Reset</button>
                        </div>
                    </div>
                    <div class="form-group m-b-0">
                        <div class="col-sm-12">
                            <a href="javascript:void(0)" id="to-login" class="text-dark pull-right"><i class="mdi mdi-keyboard-backspace"></i> Back</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </section>
    <!-- ============================================================== -->
    <!-- End Wrapper -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- All Jquery -->
    <!-- ============================================================== -->
    <script src="~/lib/assets/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap tether Core JavaScript -->
    <script src="~/lib/assets/plugins/bootstrap/js/popper.min.js"></script>
    <script src="~/lib/assets/plugins/bootstrap/js/bootstrap.min.js"></script>
    <!-- slimscrollbar scrollbar JavaScript -->
    <script src="~/lib/js/jquery.slimscroll.js"></script>
    <!--Wave Effects -->
    <script src="~/lib/js/waves.js"></script>
    <!--Menu sidebar -->
    <script src="~/lib/js/sidebarmenu.js"></script>
    <!--stickey kit -->
    <script src="~/lib/assets/plugins/sticky-kit-master/sticky-kit.min.js"></script>
    <!--Custom JavaScript -->
    <script src="~/lib/js/custom.min.js"></script>
    <!-- ============================================================== -->
    <!-- Style switcher -->
    <!-- ============================================================== -->
    <script src="~/lib/assets/plugins/styleswitcher/jQuery.style.switcher.js"></script>
</body>

</html>

<script>

    $("#recoverform").submit(function (e) {
        e.preventDefault();
        var loginVM = new Object();
        loginVM.email = $('#EmailForgotPassword').val();
        $.ajax({
            type: "POST",
            url: "/Account/ForgotPassword",
            data: JSON.stringify(loginVM),
            contentType: "application/json; charset=utf-8",
            dataType: "json",
            success: function (data) {
                Swal.fire({
                    title: '<strong>Congrats</strong>',
                    icon: 'info',
                    html:
                        'a temporary password has been sent to you by <b>email</b>., ' +
                        '<br />Please check your email ' +
                        '<br />Thank you',
                    showCloseButton: true,
                    showCancelButton: true,
                    focusConfirm: false,
                    confirmButtonText:
                        '<i class="fa fa-thumbs-up"></i> Great!',
                    confirmButtonAriaLabel: 'Thumbs up, great!',
                    cancelButtonText:
                        '<i class="fa fa-thumbs-down"></i>',
                    cancelButtonAriaLabel: 'Thumbs down'
                }).then((result) => {
                    if (result.isConfirmed) {
                        $('#recoverform').trigger('reset');
                        $("#recoverform").hide();
                        $("#loginform").fadeIn();
                    }
                })
            }
        });
    })

    $("#loginform").submit(function (e) {

        e.preventDefault();

        var form = $(this)
        $.ajax({
            type: "POST",
            url: "/Account/Signin",
            data: form.serialize(),
            success: function (data) {
                var status = data['status'];
                localStorage.token = (data['result']);
                console.log(localStorage.token)
                if (status == 1) {
                    window.location.href = "@Url.Action("ChangePassword", "Account")";
                } else {
                    window.location.href = "@Url.Action("Index", "Dashboard")";
                }
            }
        });
    })

    $('#to-login').on("click", function () {
        $("#recoverform").hide();
        $("#loginform").fadeIn();
    });

</script>
