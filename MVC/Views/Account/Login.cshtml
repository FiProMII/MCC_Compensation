@{ Layout = "_Layout"; ViewBag.Title = "Login";}

@section scripts {
    <script>
        $("#loginForm").submit(function (e) {

            e.preventDefault();

            var form = $(this)
            $.ajax({
                type: "POST",
                url: "account/loginaction",
                data: form.serialize(),
                success: function (data) {
                    console.log(data['result'])
                    //window.location.href = "@Url.Action("Index", "Person")";
                }
            });

        })
    </script>
}

<h2>Login</h2>
<form id="loginForm">
    <div class="form-group">
        <div class="row">
            <label class="col col-2">Email</label>
            <input class="col form-control" name="Email" />
        </div>
    </div>
    <div class="form-group">
        <div class="row">
            <label class="col col-2">Password</label>
            <input class="col form-control" name="Password" />
        </div>
    </div>
    <div class="panel-body">
        <button type="submit" class="btn btn-sm btn-primary">Login</button>
    </div>
</form>