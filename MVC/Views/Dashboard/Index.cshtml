@{ Layout = "_LayoutAdmin";
    ViewData["Title"] = "Dashboard";
}

<!-- Container fluid  -->
<!-- ============================================================== -->
<div class="container-fluid">
    <!-- ============================================================== -->
    <!-- Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <div class="row page-titles">
        <div class="col-md-6 col-8 align-self-center">
            <h3 class="text-themecolor m-b-0 m-t-0">Dashboard</h3>
            <ol class="breadcrumb">
                <li class="breadcrumb-item active">Dashboard</li>
            </ol>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End Bread crumb and right sidebar toggle -->
    <!-- ============================================================== -->
    <!-- ============================================================== -->
    <!-- Start Page Content -->
    <!-- ============================================================== -->
    <div class="row">
        <!-- Column -->
        <div class="col-md-6 col-lg-3 col-xlg-3">
            <div class="card card-inverse card-info">
                <div class="box bg-info text-center">
                    <h1 class="font-light text-white" id="employeeBar"></h1>
                    <h6 class="text-white">Employees</h6>
                </div>
            </div>
        </div>
        <!-- Column -->
        <div class="col-md-6 col-lg-3 col-xlg-3">
            <div class="card card-primary card-inverse">
                <div class="box text-center">
                    <h1 class="font-light text-white" id="weddingBar"></h1>
                    <h6 class="text-white">Wedding Gift Request</h6>
                </div>
            </div>
        </div>
        <!-- Column -->
        <div class="col-md-6 col-lg-3 col-xlg-3">
            <div class="card card-inverse card-success">
                <div class="box text-center">
                    <h1 class="font-light text-white" id="babyBar"></h1>
                    <h6 class="text-white">Baby Gift Request</h6>
                </div>
            </div>
        </div>
        <!-- Column -->
        <div class="col-md-6 col-lg-3 col-xlg-3">
            <div class="card card-inverse card-warning">
                <div class="box text-center">
                    <h1 class="font-light text-white" id="griefBar"></h1>
                    <h6 class="text-white">Grief Request</h6>
                </div>
            </div>
        </div>
    </div>
    <!-- Row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <center>
                        <h4 class="card-title">Total Number of Request/Year</h4>
                        <h6 class="card-subtitle">Wedding Gift, Baby Gift, Grief</h6>
                    </center>
                    <div class="m-t-40" style="height:300px;" id="chartBar"></div>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- End PAge Content -->
    <!-- ============================================================== -->
</div>
<!-- ============================================================== -->
<!-- End Container fluid  -->

@section scripts{
    <script>
        $.toast({
            heading: 'Welcome to Compensation Applications',
            text: 'Please fill out the request form, or view previous requests.',
            position: 'top-right',
            loaderBg:'#ff6849',
            icon: 'info',
            hideAfter: 10000,
            stack: 6
        });

        var options = {
            chart: {
                type: 'line'
            },
            series: [{
                name: 'Requester',
                data: []
            }],
            xaxis: {
                categories: []
            }
        }

        var chart = new ApexCharts(document.querySelector("#chartBar"), options);

        chart.render();

        $.ajax({
            type: "Get",
            url: "https://localhost:44317/API/Dashboard/Chart",
            headers: { 'Authorization': 'Bearer ' + localStorage.token },
            success: function (result) {
                var data = [];
                var categories = [];
                result.result.map(x => { data.push(x.request); });
                result.result.map(x => { categories.push(x.year); });
                chart.updateSeries([
                    {
                        name: 'total',
                        data: data,
                        categories: categories
                    }
                ])
            }
        })

        $(document).ready(function () {
            $.ajax({
                type: "Get",
                url: "https://localhost:44317/API/Dashboard/EmployeeBar",
                headers: { 'Authorization': 'Bearer ' + localStorage.token },
                success: function (result) {
                    var data = result['result'];
                    if (data.total == null) {
                        $('#employeeBar').html("0");
                    }
                    $('#employeeBar').html(data.total);
                }
            })

            $.ajax({
                type: "Get",
                url: "https://localhost:44317/API/Dashboard/WeddingBar",
                headers: { 'Authorization': 'Bearer ' + localStorage.token },
                success: function (result) {
                    var data = result['result'];
                    if (data.total == null) {
                        $('#weddingBar').html("0");
                    }
                    $('#weddingBar').html(data.total);
                }
            })

            $.ajax({
                type: "Get",
                url: "https://localhost:44317/API/Dashboard/BabyBar",
                headers: { 'Authorization': 'Bearer ' + localStorage.token },
                success: function (result) {
                    var data = result['result'];
                    if (data.total == null) {
                        $('#babyBar').html("0");
                    }
                    $('#babyBar').html(data.total);
                }
            })

            $.ajax({
                type: "Get",
                url: "https://localhost:44317/API/Dashboard/GriefBar",
                headers: { 'Authorization': 'Bearer ' + localStorage.token },
                success: function (result) {
                    var data = result['result'];
                    if (data.total == null) {
                        $('#griefBar').html("0");
                    }
                    $('#griefBar').html(data.total);
                }
            })
        })
    </script>
} 